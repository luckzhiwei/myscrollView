<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

             <slidingmenu.dreamfly.org.slidingmenu.custom.app.MyDefineHorzontalView
                 android:orientation="horizontal"
                 android:layout_width="match_parent"
                 android:background="#ffffff"
                 android:id="@+id/mydefinehscrollview_hslayout_rootlayout"
                 android:layout_centerInParent="true"
                 android:layout_height="50dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="这里是聊天的区域"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:id="@+id/textview_hslayout_chating"/>
                        <TextView
                            android:layout_width="128dp"
                            android:background="#D80323"
                            android:text="删除"
                            android:gravity="center"
                            android:textColor="#ffffff"
                            android:id="@+id/textview_hslayout_delete"
                            android:layout_height="match_parent" />
             </slidingmenu.dreamfly.org.slidingmenu.custom.app.MyDefineHorzontalView>
       </RelativeLayout>
</LinearLayout>